<p id="notice">Signed in as: <%= current_user.first_name %></p>

<h1>Notifications</h1>

<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Body </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications_client.each do |notification| %>
      <tr>
        <td><%= notification.title.upcase %></td>
        <td><%= notification.body %></td>
        <td><%= link_to 'Show Details', notification%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
